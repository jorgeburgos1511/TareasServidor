{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./src",  // Aseg√∫rate de que 'baseUrl' apunte a 'src'
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": [
      "src/**/*"
    ]
  }
  